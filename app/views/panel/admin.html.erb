<h1>Panel#admin</h1>


<h3>Users</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <!-- <td><%#= complaint.user %></td>
        <td><%#= complaint.company %></td> -->
        <td><%#= link_to 'Show', complaint %></td>
        <td><%#= link_to 'Edit', edit_complaint_path(complaint) %></td>
        <td><%#= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Companies</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <%= render company %>
    <% end %>
  </tbody>
</table>

<br>

<h3>Complaints</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <!-- <th>User</th>
      <th>Company</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.name %></td>
        <td><%= complaint.description %></td>
        <!-- <td><%#= complaint.user %></td>
        <td><%#= complaint.company %></td> -->
        <td><%= link_to 'Show', complaint %></td>
        <td><%= link_to 'Edit', edit_complaint_path(complaint) %></td>
        <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
